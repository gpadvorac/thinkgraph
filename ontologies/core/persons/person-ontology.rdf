<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:person="https://github.com/gpadvorac/thinkgraph/blob/main/ontologies/core/persons/person-ontology.rdf"
         xmlns:common="https://github.com/gpadvorac/thinkgraph/blob/main/ontologies/core/common/common-props-ontology.rdf"
         xmlns:shacl="http://www.w3.org/ns/shacl#"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema#">

    <!-- Person Class -->
    <rdfs:Class rdf:about="person:Person"/>
    <rdf:Property rdf:about="person:DID" rdfs:domain="person:Person" rdfs:range="xsd:string"/>
    <rdf:Property rdf:about="person:givenName" rdfs:domain="person:Person" rdfs:range="xsd:string"/>
    <rdf:Property rdf:about="person:middleName" rdfs:domain="person:Person" rdfs:range="xsd:string"/>
    <rdf:Property rdf:about="person:familyName" rdfs:domain="person:Person" rdfs:range="xsd:string"/>
    <rdf:Property rdf:about="person:birthDate" rdfs:domain="person:Person" rdfs:range="xsd:date"/>
    <rdf:Property rdf:about="common:timeStamp" rdfs:domain="rdfs:Resource" rdfs:range="xsd:dateTime"/>

    <!-- SHACL Shapes for Person -->
    <shacl:NodeShape rdf:about="person:PersonShape">
        <shacl:targetClass rdf:resource="person:Person"/>
        <!-- givenName -->
        <shacl:property>
            <shacl:PropertyShape>
                <shacl:path rdf:resource="person:givenName"/>
                <shacl:datatype rdf:resource="xsd:string"/>
                <shacl:maxLength rdf:datatype="xsd:integer">50</shacl:maxLength>
                <shacl:minCount rdf:datatype="xsd:integer">1</shacl:minCount>
                <shacl:maxCount rdf:datatype="xsd:integer">1</shacl:maxCount>
            </shacl:PropertyShape>
        </shacl:property>
        <!-- middleName -->
        <shacl:property>
            <shacl:PropertyShape>
                <shacl:path rdf:resource="person:middleName"/>
                <shacl:datatype rdf:resource="xsd:string"/>
                <shacl:maxLength rdf:datatype="xsd:integer">50</shacl:maxLength>
                <shacl:maxCount rdf:datatype="xsd:integer">1</shacl:maxCount>
            </shacl:PropertyShape>
        </shacl:property>
        <!-- familyName -->
        <shacl:property>
            <shacl:PropertyShape>
                <shacl:path rdf:resource="person:familyName"/>
                <shacl:datatype rdf:resource="xsd:string"/>
                <shacl:maxLength rdf:datatype="xsd:integer">50</shacl:maxLength>
                <shacl:minCount rdf:datatype="xsd:integer">1</shacl:minCount>
                <shacl:maxCount rdf:datatype="xsd:integer">1</shacl:maxCount>
            </shacl:PropertyShape>
        </shacl:property>
        <!-- birthDate -->
        <shacl:property>
            <shacl:PropertyShape>
                <shacl:path rdf:resource="person:birthDate"/>
                <shacl:datatype rdf:resource="xsd:date"/>
                <shacl:maxCount rdf:datatype="xsd:integer">1</shacl:maxCount>
            </shacl:PropertyShape>
        </shacl:property>
    </shacl:NodeShape>

</rdf:RDF>


